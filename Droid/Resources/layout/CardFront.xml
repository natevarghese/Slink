<?xml version="1.0" encoding="utf-8"?>
<com.nvcomputers.slink.CardFront
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:weightSum="100"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/BackgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <RelativeLayout
            android:id="@+id/TopView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_weight="40"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp">
            <com.nvcomputers.slink.WebImageView
                android:id="@+id/HeaderImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" />
            <EditText
                android:id="@+id/UserDisplayNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/hintGray"
                android:layout_toRightOf="@id/HeaderImageView"
                android:textColor="@android:color/black" />
            <EditText
                android:id="@+id/TitleTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textColorHint="@color/hintGray"
                android:layout_toRightOf="@id/HeaderImageView"
                android:layout_below="@id/UserDisplayNameTextView" />
        </RelativeLayout>
        <RelativeLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:paddingBottom="15dp"
            android:layout_below="@id/TopView">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/NoOutletsTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No Outlets"
                android:textSize="20sp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </RelativeLayout>
</com.nvcomputers.slink.CardFront>