<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <RelativeLayout android:layout_width="200dp" android:layout_height="wrap_content" android:background="@android:color/transparent" android:layout_centerInParent="true">
        <com.nvcomputers.slink.WebImageView android:id="@+id/WebImageView" android:layout_width="150dp" android:layout_height="150dp" android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:src="@drawable/ic_noprofilewhite" />
        <EditText android:id="@+id/FirstNameEditText" android:background="@drawable/roundedcornerswiththinborder" android:layout_width="match_parent" android:layout_height="40dp" android:textColor="@android:color/white" android:layout_centerHorizontal="true" android:padding="5dp" android:hint="First Name" android:layout_marginBottom="20dp" android:layout_marginTop="40dp"
            android:layout_below="@id/WebImageView" />
        <EditText android:id="@+id/LastNameEditText" android:background="@drawable/roundedcornerswiththinborder" android:layout_width="match_parent" android:layout_height="40dp" android:textColor="@android:color/white" android:layout_centerHorizontal="true" android:padding="5dp" android:hint="Last Name" android:layout_marginBottom="20dp" android:layout_below="@id/FirstNameEditText" />
        <Button android:id="@+id/ProgressButton" android:background="@android:color/holo_green_dark" android:layout_width="match_parent" android:layout_height="35dp" android:layout_centerHorizontal="true" android:textColor="@android:color/white" android:text="Save" android:layout_below="@id/LastNameEditText" />
    </RelativeLayout>
</RelativeLayout>